# UFOBeep Platform Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration (for Docker deployment)
POSTGRES_DB=ufobeep
POSTGRES_USER=ufobeep_user
POSTGRES_PASSWORD=change_this_secure_password
DATABASE_URL=postgresql://ufobeep_user:change_this_secure_password@postgres:5432/ufobeep

# Redis Configuration
REDIS_URL=redis://redis:6379

# Server Configuration
PORT=3001
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_change_this_immediately
JWT_EXPIRES_IN=24h

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Admin Configuration
ADMIN_EMAIL=admin@ufobeep.com
ADMIN_PASSWORD=change_this_admin_password_immediately

# Frontend Configuration
VITE_API_URL=http://localhost:3001
VITE_SOCKET_URL=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Optional: Geolocation API (for enhanced location services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Optional: Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password